<h1 class="title"><%= @post.title %></h1>
	<p class="date">
		  <%# time_ago_in_words(@post.created_at) %> 
</p>
	<p class="body"><%= @post.body %></p>

<%= image_tag @post.image.url(:medium) %>

	<div id="comments">
		<h2><%= @post.comments.count %> Comments</h2>
		<%= render @post.comments %>

		<h3>Add a comment:</h3>
		<%= render "comments/form" %>
	</div>